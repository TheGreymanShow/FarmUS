<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="thegreymanshow.farmus.TabA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <android.support.v7.widget.CardView
            android:id="@+id/banks"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:backgroundTint="@color/lightgrey"
            android:elevation="8dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="8dp"
            android:onClick="onClick"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bajra"
                android:layout_gravity="center"
                android:textColor="@color/text"
                android:textSize="18sp"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/warehouses"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:backgroundTint="@color/colorPrimary"
            android:elevation="5dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="5dp"
            android:onClick="onClick">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rice"
                android:layout_gravity="center"
                android:textColor="@color/text"
                android:textSize="18sp"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/market_place"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:backgroundTint="@color/orange3"
            android:elevation="5dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="5dp"
            android:onClick="onClick">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sugarcane"
                android:layout_gravity="center"
                android:textColor="@color/text"
                android:textSize="18sp"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/transportation"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:backgroundTint="@color/orange2"
            android:elevation="5dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="5dp"
            android:onClick="onClick"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peanuts"
                android:layout_gravity="center"
                android:textColor="@color/text"
                android:textSize="18sp"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:backgroundTint="@color/orange"
            android:elevation="5dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="8dp"
            android:onClick="onClick"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jowar"
                android:layout_gravity="center"
                android:textColor="@color/text"
                android:textSize="18sp"
                />

        </android.support.v7.widget.CardView>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
